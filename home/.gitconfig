[user]
	name = Josh Nichols
	email = technicalpickles@github.com
#	signingkey = E7BB2E6C

[credential]
	helper = osxkeychain

[core]
	excludesfile = /Users/technicalpickles/.gitignore
	pager = delta --dark

[hub]
	protocol = https

[alias]
	dc = diff --cached
	st = status
	co = checkout
	ci = commit
	di = diff
	br = !git checkout $(git branch | cut -c 3- | awk '{print $1}' | fzf +m --preview 'git show --color=always {}')

	hide = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged

[color]
	ui = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
#[commit]
#	gpgsign = true
[push]
	default = current
[github]
	user = technicalpickles
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
