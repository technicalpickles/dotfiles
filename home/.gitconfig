[user]
	name = Josh Nichols
	email = josh.nichols@gusto.com

[github]
	user = technicalpickles

[includeIf "gitdir:~/src/"]
	path = ~/.gitconfig.d/personal-identity

[includeIf "gitdir:~/workspace/"]
	path = ~/.gitconfig.d/work-identity

[includeIf "gitdir:/usr/local/Homebrew/"]
	path = ~/.gitconfig.d/personal-identity

[core]
	excludesfile = ~/.gitignore

[hub]
	protocol = https

[alias]
  ; investigate if have more problem
  ; commit = !sh -c 'if test -f .git/COMMIT_EDITMSG; then git commit --edit --file=.git/COMMIT_EDITMSG "$@"; else git commit "$@"'
	ds = diff --staged
	st = status
	co = checkout
	ci = commit
	di = diff
  sw = switch
  rs = restore
  empty = commit --allow-empty

  main = !git switch main && git pull
	default-branch = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'

	hide = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged

[color]
	ui = true

[push]
 	default = current
	autoSetupRemote = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[mergetool]
	keepTemporaries = false
	keepBackup = false

[include]
	path = ~/.gitconfig.local

[init]
	defaultBranch = main

[pull]
	rebase = false

[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	verbose = true
[remote "origin"]
	prune = true
[maintenance]
	repo = /Users/josh.nichols/workspace/zenpayroll
	repo = /Users/josh.nichols/workspace/dotfiles
	repo = /Users/josh.nichols/workspace/pickled-nvim
[credential]
	helper = osxkeychain
[duet "env"]
	git-author-initials = me
	git-author-name = Josh Nichols
	git-author-email = josh.nichols@gusto.com
	mtime = 1653423628
	git-committer-initials =
	git-committer-name =
	git-committer-email =
[remote]
 	pushdefault = origin
