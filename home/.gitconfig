[user]
	name = Josh Nichols
	email = josh.nichols@gusto.com

[github]
	user = technicalpickles

[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.d/alias
  path = ~/.gitconfig.d/color

[includeIf "gitdir:~/src/"]
	path = ~/.gitconfig.d/personal-identity

[includeIf "gitdir:~/github/"]
  path = ~/.gitconfig.d/personal-identity

[includeIf "gitdir:~/workspace/"]
	path = ~/.gitconfig.d/work-identity

[includeIf "gitdir:/usr/local/Homebrew/"]
	path = ~/.gitconfig.d/personal-identity

[core]
	excludesfile = ~/.gitignore
	untrackedcache = true
	fsmonitor = true

[fetch]
  prune = true

[pull]
  rebase = false

[push]
 	default = current
	autoSetupRemote = true

[mergetool]
	keepTemporaries = false
	keepBackup = false

[init]
	defaultBranch = main

[commit]
	verbose = true

[remote]
  pushdefault = origin

[remote "origin"]
	prune = true

[credential]
	helper = osxkeychain

[duet "env"]
	git-author-initials = me
	git-author-name = Josh Nichols
	git-author-email = josh.nichols@gusto.com
	mtime = 1653423628
	git-committer-initials =
	git-committer-name =
	git-committer-email =

[merge]
	audoedit = no
